extends layout

block content
  h1.team-sprint.govuk-heading-xl DARTS #{sprint}
  div.govuk-inset-text= dates

  div.govuk-body
    div.govuk-width-container
      p.key
        span.govuk-body-s.govuk-tag.govuk-tag--light-blue.key-item With developers
        span.govuk-body-s.govuk-tag.govuk-tag--yellow.key-item With testers
        span.govuk-body-s.govuk-tag.govuk-tag--red.key-item Blocked
        span.bug
          svg(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 512 512')
            path(d='M256 0c53 0 96 43 96 96v3.6c0 15.7-12.7 28.4-28.4 28.4H188.4c-15.7 0-28.4-12.7-28.4-28.4V96c0-53 43-96 96-96zM41.4 105.4c12.5-12.5 32.8-12.5 45.3 0l64 64c.7 .7 1.3 1.4 1.9 2.1c14.2-7.3 30.4-11.4 47.5-11.4H312c17.1 0 33.2 4.1 47.5 11.4c.6-.7 1.2-1.4 1.9-2.1l64-64c12.5-12.5 32.8-12.5 45.3 0s12.5 32.8 0 45.3l-64 64c-.7 .7-1.4 1.3-2.1 1.9c6.2 12 10.1 25.3 11.1 39.5H480c17.7 0 32 14.3 32 32s-14.3 32-32 32H416c0 24.6-5.5 47.8-15.4 68.6c2.2 1.3 4.2 2.9 6 4.8l64 64c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0l-63.1-63.1c-24.5 21.8-55.8 36.2-90.3 39.6V240c0-8.8-7.2-16-16-16s-16 7.2-16 16V479.2c-34.5-3.4-65.8-17.8-90.3-39.6L86.6 502.6c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3l64-64c1.9-1.9 3.9-3.4 6-4.8C101.5 367.8 96 344.6 96 320H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H96.3c1.1-14.1 5-27.5 11.1-39.5c-.7-.6-1.4-1.2-2.1-1.9l-64-64c-12.5-12.5-12.5-32.8 0-45.3z')
        span.bug.key-item Bug
        span.spike
          svg(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 384 512')
            path(d='M0 256L28.5 28c2-16 15.6-28 31.8-28H228.9c15 0 27.1 12.1 27.1 27.1c0 3.2-.6 6.5-1.7 9.5L208 160H347.3c20.2 0 36.7 16.4 36.7 36.7c0 7.4-2.2 14.6-6.4 20.7l-192.2 281c-5.9 8.6-15.6 13.7-25.9 13.7h-2.9c-15.7 0-28.5-12.8-28.5-28.5c0-2.3 .3-4.6 .9-6.9L176 288H32c-17.7 0-32-14.3-32-32z')
        span.spike.key-item Spike
      each epic in data
        div.epic
          h3.govuk-heading-m= epic[0]
          ul
            each entry in epic[1]
              li.issue
                div
                  if entry.isFrontend
                    span.govuk-body-s.govuk-tag.govuk-tag--turquoise.component Frontend
                  if entry.isBackend
                    span.govuk-body-s.govuk-tag.govuk-tag--purple.component Backend
                  if entry.type == 'Bug'
                    span.bug
                      svg(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 512 512')
                        path(d='M256 0c53 0 96 43 96 96v3.6c0 15.7-12.7 28.4-28.4 28.4H188.4c-15.7 0-28.4-12.7-28.4-28.4V96c0-53 43-96 96-96zM41.4 105.4c12.5-12.5 32.8-12.5 45.3 0l64 64c.7 .7 1.3 1.4 1.9 2.1c14.2-7.3 30.4-11.4 47.5-11.4H312c17.1 0 33.2 4.1 47.5 11.4c.6-.7 1.2-1.4 1.9-2.1l64-64c12.5-12.5 32.8-12.5 45.3 0s12.5 32.8 0 45.3l-64 64c-.7 .7-1.4 1.3-2.1 1.9c6.2 12 10.1 25.3 11.1 39.5H480c17.7 0 32 14.3 32 32s-14.3 32-32 32H416c0 24.6-5.5 47.8-15.4 68.6c2.2 1.3 4.2 2.9 6 4.8l64 64c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0l-63.1-63.1c-24.5 21.8-55.8 36.2-90.3 39.6V240c0-8.8-7.2-16-16-16s-16 7.2-16 16V479.2c-34.5-3.4-65.8-17.8-90.3-39.6L86.6 502.6c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3l64-64c1.9-1.9 3.9-3.4 6-4.8C101.5 367.8 96 344.6 96 320H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H96.3c1.1-14.1 5-27.5 11.1-39.5c-.7-.6-1.4-1.2-2.1-1.9l-64-64c-12.5-12.5-12.5-32.8 0-45.3z')
                  if entry.type == 'Spike'
                    span.spike
                      svg(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 384 512')
                        path(d='M0 256L28.5 28c2-16 15.6-28 31.8-28H228.9c15 0 27.1 12.1 27.1 27.1c0 3.2-.6 6.5-1.7 9.5L208 160H347.3c20.2 0 36.7 16.4 36.7 36.7c0 7.4-2.2 14.6-6.4 20.7l-192.2 281c-5.9 8.6-15.6 13.7-25.9 13.7h-2.9c-15.7 0-28.5-12.8-28.5-28.5c0-2.3 .3-4.6 .9-6.9L176 288H32c-17.7 0-32-14.3-32-32z')
                  span.summary= entry.summary
                  span.govuk-body-s.key
                    a(href="https://tools.hmcts.net/jira/browse/#{entry.key}", target="_blank")= entry.key
                  if ['in progress', 'review'].includes(entry.status.toLowerCase())
                    span.govuk-body-s.govuk-tag.govuk-tag--light-blue.status= entry.status == 'Review' ? 'Dev review' : entry.status
                  if ['blocked', 'awaiting fix'].includes(entry.status.toLowerCase())
                    span.govuk-body-s.govuk-tag.govuk-tag--red.status= entry.status
                  if ['ready for test', 'qa testing', 'test review'].includes(entry.status.toLowerCase())
                    span.govuk-body-s.govuk-tag.govuk-tag--yellow.status= entry.status
